{
  "manifest_version": 2,
  "name": "niconico_mylist_maker",
  "version": "0.0.1",

  "description": "",
  "icons": {},

  "browser_action": {
    "default_title": "Niconico Mylist Maker",
    "default_popup": "popup.html"
  },

  "author": "tsuwacth",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.js", "content_scripts.js"]
    }
  ],
  "permissions": [
    "contextMenus"
  ]
}
